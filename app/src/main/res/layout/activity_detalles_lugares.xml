<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesLugares">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/imagenLugares"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:gravity="center_horizontal"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonTelefono"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Telefono"
                            app:icon="@drawable/outline_phone_in_talk_black_24dp" />

                        <Button
                            android:id="@+id/buttonWeb"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="WEB"
                            app:icon="@drawable/web" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTipo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewHorario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewPrecio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewDescuento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewReserva"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewUbicacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewTransporte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewAccesibilidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewTiempoVisita"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewWeb"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="TextView"
                            android:textSize="20sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/textViewTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="TextView"
                            android:textSize="20sp"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBoxQuererVer"
                                android:layout_width="199dp"
                                android:layout_height="wrap_content"
                                android:text="Querer ver" />

                            <Button
                                android:id="@+id/buttonGuardar"
                                android:layout_width="199dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Guardar" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>