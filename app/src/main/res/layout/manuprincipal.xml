<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".menuprincipal"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/twLugaresPlanos"
                android:layout_width="match_parent"
                android:layout_height="221dp">

                <ImageButton
                    android:id="@+id/btnLugares"
                    android:layout_width="187dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:text="Lugares"
                    app:srcCompat="@drawable/el_oso_y_el_madrono_espana" />

                <ImageButton
                    android:id="@+id/btnPlanos"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mapas" />

            </TableRow>

            <TableRow
                android:id="@+id/trnombres1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewLugares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="LUGARES"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewPlanos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PLANOS"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/trItinerariosOficinas"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnItinerario"
                    android:layout_width="187dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ruta" />

                <ImageButton
                    android:id="@+id/btnOficinasTurismo"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/oficinaturismo" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewItinerarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="ITINERARIOS"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewOficinasTurismo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="OFICINAS TURISMO"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="27dp">

                <ImageButton
                    android:id="@+id/btnMadridCard"
                    android:layout_width="187dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tarjetatransporte" />

                <ImageButton
                    android:id="@+id/btnBusTuristico"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/busturistico" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TARJETA TRANSPORTE"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BUS TURISTICO"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnVistos"
                    android:layout_width="187dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/visto" />

                <ImageButton
                    android:id="@+id/btnQuererVer"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/querer_ver" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="VISTOS"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="QUERER VER"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewid"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>