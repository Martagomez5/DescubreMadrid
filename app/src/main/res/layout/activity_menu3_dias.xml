<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu3Dias">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButtondia1menu3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dia1" />

            <ImageButton
                android:id="@+id/imageButtondia2menu3"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dia2" />

            <ImageButton
                android:id="@+id/imageButtondia3menu3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dia3" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>