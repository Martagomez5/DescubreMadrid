<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusTuristico">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Información"
                android:textColor="#5161BC"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewInformacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="•Opera todos los dias del año \n•El billete, MADRID CITY TOUR, le permite subir y bajar, tantas veces como desee, cambiar de ruta y su uso ilimitado todo el dia. \n• El billete será valido durante 1 o  2 dias, dependiendo de la opción escogida, para todas las rutas \n• El billete será valido durante 1 o  2 dias, dependiendo de la opción escogida, para todas las rutas "
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textViewInformacion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="• Los billetes se puden adquirir en:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewLugar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-C/ Felipe IV (Entre Museo del Prado y Hotel Ritz) \n- App City Tour Worldwide \n - En el propio bus, en cualquier parada"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewLugarWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:gravity="center"
                android:linksClickable="true"
                android:text="- Página web City Tour WorldWide "
                android:textColor="#00BCD4"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textViewRutas"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Rutas"
                android:textColor="#5161BC"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonRuta1"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="RUTA 1: HISTÓRICO"
                app:backgroundTint="@android:color/holo_blue_dark" />

            <Button
                android:id="@+id/buttonRuta2"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="RUTA 2: MODERNO"
                app:backgroundTint="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="HORARIOS"
                android:textColor="#5161BC"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verano (01/03 - 31/10) \nInvierno (01/11 - 28/02 "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewHorarioRutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Ruta 1: Histórico y Ruta 2: Moderno \nV: 09:00 a 22:00 cada 8-10 min \n I: 10:00 a 18:00 cada 14-15min"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewRuta1Ampliada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Ruta 1 Ampliada \nV:Bus a las 10:05 y a las 18:05. \nI: Bus a las 10:10 y a las 14:30"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textViewRuta2Ampliada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Ruta 2 Ampliada \nV:Bus a las 12:05 y a las 16:05. \nI: Bus a las 12:30 y a las 16:30"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textViewRutaNocturna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Ruta nocturna \n16/06 - 15/09 : 2 tours desde las 22:00"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textViewPreciosOnline"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="PRECIOS ONLINE"
                android:textColor="#5161BC"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrecios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Niños( 0-6 años) \nGratis \n     Junior(7-15 años) \n1 Dia: 9€ \n 2 dias: 11.70€ \n     Adulto (16-64 años) \n1 Dia: 19,80€ \n2 Dias: 23.40€ \n     Senior (+65 Años) \nFamilia (2 adultos + 2 junior) \n49.50€"
                android:textSize="20sp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>