<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:id="@+id/Registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="52dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/outline_perm_identity_black_24dp" />

                <EditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apellidos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="52dp"
                    android:layout_height="46dp"
                    android:layout_toLeftOf="@+id/editTextApellidos"
                    app:srcCompat="@drawable/outline_perm_identity_black_24dp" />

                <EditText
                    android:id="@+id/editTextApellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCorreo"
                    android:layout_width="52dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/outline_email_black_24dp" />

                <EditText
                    android:id="@+id/editTextCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:hint="Correo"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/outline_perm_identity_black_24dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:text="Genero"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroupGenero"
                    android:layout_width="298dp"
                    android:layout_height="64dp"
                    android:layout_toLeftOf="@+id/editTextApellidos"
                    android:orientation="horizontal">
                    >

                    <RadioButton
                        android:id="@+id/radioButtonHombre"
                        android:layout_width="105dp"
                        android:layout_height="62dp"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/radioButtonMujer"
                        android:layout_width="105dp"
                        android:layout_height="62dp"
                        android:layout_weight="1"
                        android:text="Mujer" />

                    <RadioButton
                        android:id="@+id/radioButtonOtro"
                        android:layout_width="105dp"
                        android:layout_height="62dp"
                        android:layout_weight="1"
                        android:text="Otro" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewContraseñaRegistro"
                    android:layout_width="52dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/outline_lock_black_24dp" />

                <EditText
                    android:id="@+id/editTextContraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewComprobarContraseña"
                    android:layout_width="52dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/outline_lock_black_24dp" />

                <EditText
                    android:id="@+id/editTextComprobarContraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:hint="Comprobar contraseña"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonRegistrarse"
                    android:layout_width="143dp"
                    android:layout_height="57dp"
                    android:enabled="true"
                    android:text="Registrarse" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iniciarSesion"
                    android:layout_width="263dp"
                    android:layout_height="76dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="¿Ya estás registrado? Inicia Sesion"
                    android:textColor="#FF03DAC5"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>